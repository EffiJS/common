{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "baseUrl": "./",
        "paths": {
            "@*": ["src/*"],
            "@data": ["src/data"],
            "@data/*": ["src/data/*"],
//            "*": ["./src/*"],
//            "@dto": ["src/dto"],
//            "@dto/*": ["src/dto/*"],


//            "@common": ["src/common"],
//            "@common/*": ["src/common/*"],
//            "@core": ["src/core"],
//            "@core/*": ["src/core/*"],
//            "@utils": ["src/utils"],
//            "@utils/*": ["src/utils/*"]
        },
        "outDir": "./dist/esm",
        "declaration": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
//        "strict": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true
    },
    "include": ["./src"],
    "exclude": ["./node_modules", "./dist"],
}
